{% extends "base.njk" %}

{% block main %}
<div class="dark:text-white">
	<h2 class="font-black text-4xl tracking-tight">{{ title }}</h2>

	<div>
		<div class="flex flex-col my-2 mt-4 space-y-6">
			{% for project in collections.projects %}
			<a
				class="border-[2px] border-emerald-400 rounded p-4 w-full bg-white dark:bg-transparent"
				href="{{ project.url }}"
			>
				<h3 class="text-lg font-bold text-left">
					{{ project.data.title }}
				</h3>
				<p class="mt-1">{{ project.data.sub }}</p>
			</a>
			{% endfor %}
		</div>
	</div>
</div>
{% endblock %}
